<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.768"
        tools:context=".RegisterPage1">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:paddingStart="32dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis_semi_bold"
            android:text="Register your restaurant here\nto continue:"
            android:textColor="@color/color2"
            android:paddingBottom="@dimen/P_8dp"
            android:textSize="@dimen/TS_18sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.348"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/OwnerNameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/W_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/M_10dp"
            android:textColorHint="@color/color2"
            app:boxCornerRadiusBottomEnd="@dimen/R_6dp"
            app:boxCornerRadiusBottomStart="@dimen/R_6dp"
            app:boxCornerRadiusTopEnd="@dimen/R_6dp"
            app:boxCornerRadiusTopStart="@dimen/R_6dp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/W_2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/color2"
            app:hintEnabled="false"
            app:startIconTint="@color/color2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/OwnerName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H_50dp"
                android:fontFamily="@font/metropolis_regular"
                android:hint="OwnerName"
                android:maxLength="28"
                android:singleLine="true"
                android:textColor="@color/color2"
                android:textColorHint="@color/color2"
                android:textSize="@dimen/TS_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RestaurantNameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/W_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/M_10dp"
            android:textColorHint="@color/color2"
            app:boxCornerRadiusBottomEnd="@dimen/R_6dp"
            app:boxCornerRadiusBottomStart="@dimen/R_6dp"
            app:boxCornerRadiusTopEnd="@dimen/R_6dp"
            app:boxCornerRadiusTopStart="@dimen/R_6dp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/W_2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/color2"
            app:hintEnabled="false"
            app:startIconTint="@color/color2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/RestaurantName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H_50dp"
                android:fontFamily="@font/metropolis_regular"
                android:hint="Restaurant Name"
                android:maxLength="28"
                android:singleLine="true"
                android:textColor="@color/color2"
                android:textColorHint="@color/color2"
                android:textSize="@dimen/TS_14sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/GSTNoLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/W_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/M_10dp"
            android:textColorHint="@color/color2"
            app:boxCornerRadiusBottomEnd="@dimen/R_6dp"
            app:boxCornerRadiusBottomStart="@dimen/R_6dp"
            app:boxCornerRadiusTopEnd="@dimen/R_6dp"
            app:boxCornerRadiusTopStart="@dimen/R_6dp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/W_2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/color2"
            app:hintEnabled="false"
            app:startIconTint="@color/color2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/GSTNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H_50dp"
                android:fontFamily="@font/metropolis_regular"
                android:hint="GST Number(Optional)"
                android:inputType="text"
                android:maxLength="15"
                android:textColor="@color/color2"
                android:textColorHint="@color/color2"
                android:textSize="@dimen/TS_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FSSAILayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/W_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/M_10dp"
            android:textColorHint="@color/color2"
            app:boxCornerRadiusBottomEnd="@dimen/R_6dp"
            app:boxCornerRadiusBottomStart="@dimen/R_6dp"
            app:boxCornerRadiusTopEnd="@dimen/R_6dp"
            app:boxCornerRadiusTopStart="@dimen/R_6dp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/W_2dp"
            app:counterTextColor="@color/color2"
            app:endIconMode="clear_text"
            app:endIconTint="@color/color2"
            app:hintEnabled="false"
            app:startIconTint="@color/color2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/FSSAINumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H_50dp"
                android:maxLength="15"
                android:fontFamily="@font/metropolis_regular"
                android:hint="FSSAI License number"
                android:inputType="text"
                android:textColor="@color/color2"
                android:textColorHint="@color/color2"
                android:textSize="@dimen/TS_14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/PanCardLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/W_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/M_10dp"
            android:textColorHint="@color/color2"
            app:boxCornerRadiusBottomEnd="@dimen/R_6dp"
            app:boxCornerRadiusBottomStart="@dimen/R_6dp"
            app:boxCornerRadiusTopEnd="@dimen/R_6dp"
            app:boxCornerRadiusTopStart="@dimen/R_6dp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/W_2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/color2"
            app:hintEnabled="false"
            app:startIconTint="@color/color2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PanCardNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H_50dp"
                android:fontFamily="@font/metropolis_regular"
                android:hint="Pan Card Number"
                android:inputType="text"
                android:textColor="@color/color2"
                android:maxLength="10"
                android:textColorHint="@color/color2"
                android:textSize="@dimen/TS_14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ContactNumberLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/W_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/M_10dp"
            android:textColorHint="@color/color2"
            app:boxCornerRadiusBottomEnd="@dimen/R_6dp"
            app:boxCornerRadiusBottomStart="@dimen/R_6dp"
            app:boxCornerRadiusTopEnd="@dimen/R_6dp"
            app:boxCornerRadiusTopStart="@dimen/R_6dp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/W_2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/color2"
            app:hintEnabled="false"
            app:startIconTint="@color/color2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ContactNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/H_50dp"
                android:fontFamily="@font/metropolis_regular"
                android:hint="Contact Number"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/color2"
                android:textColorHint="@color/color2"
                android:textSize="@dimen/TS_14sp" />

        </com.google.android.material.textfield.TextInputLayout>






    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>